<server>

	<library id="H2Lib">
		<fileset dir="${server.config.dir}/resources"/>
	</library>
	<jdbcDriver id="H2Driver"
				javax.sql.ConnectionPoolDataSource="org.h2.jdbcx.JdbcDataSource"
				javax.sql.DataSource="org.h2.jdbcx.JdbcDataSource"
				javax.sql.XADataSource="org.h2.jdbcx.JdbcDataSource"
				libraryRef="H2Lib"/>

  	<!-- Decision Center Datasource -->
	<dataSource id="dc-h2Embedded" 
				isolationLevel="TRANSACTION_READ_COMMITTED" 
				jndiName="jdbc/ilogDataSource"
				statementCacheSize="150" 
				jdbcDriverRef="H2Driver" 
				type="javax.sql.ConnectionPoolDataSource">
		<connectionManager 
				maxPoolSize="25" 
				minPoolSize="10" 
				connectionTimout="10s" 
				agedTimeout="30m"/>
	    <properties URL="jdbc:h2:${server.config.dir}/dbdata/rtsdb;MODE=HSQLDB;LOCK_TIMEOUT=40000" 
					user="odm" 
					password="odm"/>
	</dataSource>

	<!-- RES datasource -->
	<dataSource id="res-h2Embedded" jndiName="jdbc/resdatasource" jdbcDriverRef="H2Driver">
		<properties URL="jdbc:h2:${server.config.dir}/dbdata/resdb;MODE=HSQLDB;auto_server=true" user="odm" password="odm"/>
	</dataSource>

</server>
