	<!-- Decision Center Rest Api-->
	<application id="decisioncenter-api" context-root="${ODM_CONTEXT_ROOT}/decisioncenter-api" location="${server.config.dir}/apps/decisioncenter-api.war" name="decisioncenter-api">
		<classloader delegation="parentLast">
                        <privateLibrary>
                                <fileset dir="/config/customlib" includes="*.jar" scanInterval="5s" id="customlibdir"/>
                        </privateLibrary>
			<privateLibrary>
                                <fileset dir="/config/download" includes="*.jar" scanInterval="5s" id="downloaddir"/>
                        </privateLibrary>
                </classloader>
		<application-bnd>
			<security-role name="rtsAdministrator">
				<group name="rtsAdministrators" />
     			<user name="dcAdmAI" access-id="user:customRealm/AIAssistant"/>
			</security-role>
			<security-role name="rtsInstaller">
				<group name="rtsInstallers" />
			</security-role>
			<security-role name="rtsConfigManager">
				<group name="rtsConfigManagers" />
			</security-role>
			<security-role name="rtsUser">
				<special-subject type="ALL_AUTHENTICATED_USERS" />
			</security-role>
		</application-bnd>
	</application>
