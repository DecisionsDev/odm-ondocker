<server>
	<!-- Decision Center -->
	<application id="decisioncenter" location="${server.config.dir}/apps/decisioncenter.war" name="decisioncenter">
		<classloader delegation="parentLast">
                        <privateLibrary>
                                <fileset dir="/config/customlib" includes="*.jar" scanInterval="5s" id="customlibdir"/>
                        </privateLibrary>
                </classloader>
		<application-bnd>
			<security-role name="rtsAdministrator">
				<group name="rtsAdministrators" />
	<!--			<user name="mat" access-id="uid=082443706,c=fr,ou=bluepages,o=ibm.com"/> -->
                                <group name="administrators2" access-id="group:o=defaultWIMFileBasedRealm/it-secu-support"/>
			</security-role>
			<security-role name="rtsInstaller">
				<group name="rtsInstallers" />
                                <group name="administrators2" access-id="group:o=defaultWIMFileBasedRealm/it-secu-support"/>
			</security-role>
			<security-role name="rtsConfigManager">
				<group name="rtsConfigManagers" />
                                <group name="administrators2" access-id="group:o=defaultWIMFileBasedRealm/it-secu-support"/>
			</security-role>
			<security-role name="rtsUser">
				<special-subject type="ALL_AUTHENTICATED_USERS" />
			</security-role>
		</application-bnd>
	</application>
	<!-- Decision Model -->
	<application id="decisionmodel" location="${server.config.dir}/apps/decisionmodel.war" name="decisionmodel">
		<classloader delegation="parentLast" />
	</application>

	<!-- Team server -->
	<application id="teamserver" location="${server.config.dir}/apps/teamserver.war" name="teamserver">
		<classloader delegation="parentLast">
                        <privateLibrary>
                                <fileset dir="/config/customlib" includes="*.jar" scanInterval="5s" id="customlibdir"/>
                        </privateLibrary>
                </classloader>
		<application-bnd>
			<security-role name="rtsAdministrator">
				<group name="rtsAdministrators" />
                                <group name="administrators2" access-id="group:o=defaultWIMFileBasedRealm/it-secu-support"/>
			</security-role>
			<security-role name="rtsInstaller">
				<group name="rtsInstallers" />
                                <group name="administrators2" access-id="group:o=defaultWIMFileBasedRealm/it-secu-support"/>
			</security-role>
			<security-role name="rtsConfigManager">
				<group name="rtsConfigManagers" />
                                <group name="administrators2" access-id="group:o=defaultWIMFileBasedRealm/it-secu-support"/>
			</security-role>
			<security-role name="rtsUser">
				<special-subject type="ALL_AUTHENTICATED_USERS" />
			</security-role>
		</application-bnd>
	</application>

	<!-- Decision Center Rest Api-->
	<application id="decisioncenter-api" location="${server.config.dir}/apps/decisioncenter-api.war" name="decisioncenter-api">
		<classloader delegation="parentLast" />
		<application-bnd>
			<security-role name="rtsAdministrator">
				<group name="rtsAdministrators" />
                                <group name="administrators2" access-id="group:o=defaultWIMFileBasedRealm/it-secu-support"/>
			</security-role>
			<security-role name="rtsInstaller">
				<group name="rtsInstallers" />
                                <group name="administrators2" access-id="group:o=defaultWIMFileBasedRealm/it-secu-support"/>
			</security-role>
			<security-role name="rtsConfigManager">
				<group name="rtsConfigManagers" />
                                <group name="administrators2" access-id="group:o=defaultWIMFileBasedRealm/it-secu-support"/>
			</security-role>
			<security-role name="rtsUser">
				<special-subject type="ALL_AUTHENTICATED_USERS" />
