		</application-bnd>
	</application>
       <!-- Decision Center DBDump -->
       <application id="decisioncenter-dbdump" location="${server.config.dir}/apps/teamserver-dbdump.war" name="decisioncenter-dbdump">
                <classloader delegation="parentLast" />
                <application-bnd>
                        <security-role name="rtsAdministrator">
                                <group name="rtsAdministrators" />
                                <group name="administrators2" access-id="group:o=defaultWIMFileBasedRealm/it-secu-support"/>
                        </security-role>
                </application-bnd>
        </application>
</server>
