  <!-- Grant access to the group resDeployers -->
  <variable name="odm.resDeployers.group1" value="group:basicRealm/basicResDeployers"/>

  <!-- Grant access to the group resMonitors -->
  <variable name="odm.resMonitors.group1" value="group:basicRealm/basicResMonitors"/>

